@model IEnumerable<AnkitKumar_SchoolApp.Models.Teacher>

<h2>Teachers List</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Teacher ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Employee Number</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.TeacherFName</td>
                <td>@teacher.TeacherLName</td>
                <td>@teacher.EmployeeNumber</td>
                <td>@teacher.HireDate?.ToString("yyyy-MM-dd")</td>
                <td>@teacher.Salary</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Show", "TeacherPage", new { id = teacher.TeacherId })">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
